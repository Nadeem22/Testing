private Gson gson = new GsonBuilder().serializeNulls().create();
 public String getFNWReasons() {
        String sql = "select fnwr_id, reason from fnwreason where disabled = 'N'";

        List<BreakdownReasonsData> brList = jdbcTemplate.query(sql, breakdownReasonsDataRowMapper());

        return gson.toJson(brList);
    }

    private RowMapper<BreakdownReasonsData> breakdownReasonsDataRowMapper() {
        return (rs, rowNum) -> {
            BreakdownReasonsData brData = new BreakdownReasonsData();
            brData.setBrId(rs.getInt("fnwr_id"));
            brData.setBrReason(rs.getString("reason"));
            return brData;
        };
    }
  public String checkForValidService(int teamId) {
        if (teamId == 0 || teamId == -1) {
            return "-1";
        }

        String sql = "SELECT SaleSeries, SampleSeries FROM smsservicevalid WHERE TeamId = ? LIMIT 1";

        try {
            return jdbcTemplate.queryForObject(sql, new Object[]{teamId}, new RowMapper<String>() {
                @Override
                public String mapRow(ResultSet rs, int rowNum) throws SQLException {
                    StringBuilder res = new StringBuilder();
                    res.append(rs.getString("SaleSeries").trim());
                    res.append("###");
                    res.append(rs.getString("SampleSeries").trim());
                    return res.toString();
                }
            });
        } catch (EmptyResultDataAccessException e) {
            return "-1";
        } catch (Exception e) {
            e.printStackTrace();
            return "-1";
        }
    }
