 public JSONArray getSurveyQuestions(String surveyId) {
        if (surveyId == null || surveyId.isEmpty()) {
            return new JSONArray();
        }

        String sql = "SELECT q_id, q_title, input_type, textfieldtype, mandatory FROM question WHERE survey_id IN (?) AND disabled = 0";

        try {
            return new JSONArray(jdbcTemplate.query(sql, new Object[]{surveyId}, new RowMapper<JSONObject>() {
                @Override
                public JSONObject mapRow(ResultSet rs, int rowNum) throws SQLException {
                    JSONObject jsonObject = new JSONObject();
                    jsonObject.put("id", rs.getInt("q_id"));
                    jsonObject.put("title", rs.getString("q_title"));
                    int inputType = rs.getInt("input_type");
                    jsonObject.put("type", inputType);
                    jsonObject.put("ttype", inputType == 0 ? rs.getInt("textfieldtype") : 0);
                    jsonObject.put("mand", rs.getInt("mandatory"));
                    jsonObject.put("tlen", 50);

                    int qId = rs.getInt("q_id");
                    jsonObject.put("opts", getSurveyOptions(qId)); // Assuming you adapt getSurveyOptions method similarly.
                    return jsonObject;
                }
            }));
        } catch (Exception e) {
            e.printStackTrace();
            return new JSONArray();
        }
    }
 public JSONArray getSurveyOptions(int qId) {
        if (qId <= 0) {
            return new JSONArray();
        }

        String sql = "SELECT option_id, option_title FROM question_options WHERE q_id = ?";

        try {
            return new JSONArray(jdbcTemplate.query(sql, new Object[]{qId}, new RowMapper<JSONObject>() {
                @Override
                public JSONObject mapRow(ResultSet rs, int rowNum) throws SQLException {
                    JSONObject jsonObject = new JSONObject();
                    jsonObject.put("id", rs.getInt("option_id"));
                    jsonObject.put("value", rs.getString("option_title"));
                    return jsonObject;
                }
            }));
        } catch (Exception e) {
            e.printStackTrace();
            return new JSONArray();
        }
    }
 public String loadMohullaSupervisors(int mpromoterId) {

        String sql = "SELECT USER_ID, FIRST_NAME FROM USER_MASTER WHERE (DISABLED = 'N' OR DISABLED IS NULL) AND " +
                "USER_TYPE IN (5) AND USER_ID IN (SELECT DISTINCT SUP_USER_ID FROM H2H_TEAMS where team_id = " +
                "(select parent_user_id from user_master where user_id = ?))";

        try {
            List<Supervisor> supervisorList = jdbcTemplate.query(sql, new Object[]{mpromoterId}, new RowMapper<Supervisor>() {
                @Override
                public Supervisor mapRow(ResultSet rs, int rowNum) throws SQLException {
                    Supervisor sup = new Supervisor();
                    sup.setUserId(rs.getString("USER_ID"));
                    sup.setUserName(rs.getString("FIRST_NAME"));
                    return sup;
                }
            });

            Gson gson = new GsonBuilder().serializeNulls().create();
            return gson.toJson(supervisorList);

        } catch (Exception e) {
            e.printStackTrace();
            return "";
        }
    }
public String loadMohullaSupervisors(int mpromoterId) {
        String sql = "SELECT USER_ID, FIRST_NAME FROM USER_MASTER WHERE (DISABLED = 'N' OR DISABLED IS NULL) " +
                "AND USER_TYPE IN (5) AND USER_ID IN (SELECT DISTINCT SUP_USER_ID FROM H2H_TEAMS WHERE team_id = " +
                "(SELECT parent_user_id FROM user_master WHERE user_id = ?))";

        try {
            List<Supervisor> supervisorList = jdbcTemplate.query(sql, new Object[]{mpromoterId}, new SupervisorRowMapper());

            Gson gson = new GsonBuilder().serializeNulls().create();
            return gson.toJson(supervisorList);

        } catch (Exception e) {
            e.printStackTrace();
            return "";
        }
    }

    private static class SupervisorRowMapper implements RowMapper<Supervisor> {
        @Override
        public Supervisor mapRow(ResultSet rs, int rowNum) throws SQLException {
            Supervisor sup = new Supervisor();
            sup.setUserId(rs.getString("USER_ID"));
            sup.setUserName(rs.getString("FIRST_NAME"));
            return sup;
        }
    }
 public String loadPromoterSupervisors(int ppromoterId) {
        String sql = "SELECT USER_ID, FIRST_NAME FROM USER_MASTER WHERE (DISABLED = 'N' OR DISABLED IS NULL) " +
                "AND USER_TYPE IN (3) AND USER_ID IN (SELECT DISTINCT SUP_USER_ID FROM H2H_TEAMS WHERE team_id = " +
                "(SELECT parent_user_id FROM user_master WHERE user_id = ?))";

        try {
            List<Supervisor> supervisorList = jdbcTemplate.query(sql, new Object[]{ppromoterId}, new SupervisorRowMapper());

            Gson gson = new GsonBuilder().serializeNulls().create();
            return gson.toJson(supervisorList);

        } catch (Exception e) {
            e.printStackTrace();
            return "";
        }
    }

    private static class SupervisorRowMapper implements RowMapper<Supervisor> {
        @Override
        public Supervisor mapRow(ResultSet rs, int rowNum) throws SQLException {
            Supervisor sup = new Supervisor();
            sup.setUserId(rs.getString("USER_ID"));
            sup.setUserName(rs.getString("FIRST_NAME"));
            return sup;
        }
    }
 public int checkPhoneNoExists(String userId) {
        String sql = "SELECT (CASE WHEN (acStatus='Y' AND icStatus='Y' AND pbStatus='Y' AND GovtIdStatus ='Y' AND unStatus = 'Y') THEN '0' " +
                "WHEN ((first_name IS NOT NULL AND mobile IS NOT NULL) AND (account_num IS NULL OR ifsc_code IS NULL)) THEN '2' " +
                "WHEN (first_name IS NOT NULL AND mobile IS NOT NULL AND account_num IS NOT NULL AND ifsc_code IS NOT NULL " +
                "AND unStatus = 'P' AND acStatus='P' AND icStatus='P' AND (kycpb.image_path IS NOT NULL AND pbStatus='P') AND (kyc.image_path IS NOT NULL AND GovtIdStatus='P')) THEN '0' " +
                "WHEN (first_name IS NOT NULL AND mobile IS NOT NULL AND account_num IS NOT NULL AND ifsc_code IS NOT NULL " +
                "AND unStatus = 'N' OR acStatus='N' OR icStatus='N' OR pbStatus='N' OR kycpb.image_path IS NULL OR GovtIdStatus='N' OR kyc.image_path IS NULL) THEN '2' ELSE '1' END) AS status " +
                "FROM user_mobile um LEFT JOIN kycphototable kyc ON kyc.userId = um.user_id AND kyc.phototype_Id = 852 " +
                "LEFT JOIN kycphototable kycpb ON kycpb.userId = um.user_id AND kycpb.phototype_Id = 851 WHERE user_id=?";

        try {
            Integer result = jdbcTemplate.queryForObject(sql, new Object[]{userId}, Integer.class);
            return (result != null) ? result : 1;
        } catch (Exception e) {
            e.printStackTrace();
            return 1;
        }
    }
public JSONObject getUserKycList(String userId) {
        String sql = "SELECT first_name, mobile, account_num, ifsc_code, kp1.image_path AS passbookImage, kp2.image_path AS GovtIdImage, "
                + "(SELECT remarks FROM kyc_remarks WHERE r_id=acRemarks) AS acRemarks, acStatus, "
                + "(SELECT remarks FROM kyc_remarks WHERE r_id=icRemarks) AS icRemarks, icStatus, "
                + "(SELECT remarks FROM kyc_remarks WHERE r_id=pbRemarks) AS pbRemarks, pbStatus, "
                + "(SELECT remarks FROM kyc_remarks WHERE r_id=GovtIdRemarks) AS GovtIdRemarks, GovtIdStatus, "
                + "(SELECT remarks FROM kyc_remarks WHERE r_id=unRemarks) AS unRemarks, unStatus "
                + "FROM user_mobile um LEFT JOIN kycPhotoTable kp1 ON kp1.userId = um.user_id AND kp1.phototype_id = 851 "
                + "LEFT JOIN kycPhotoTable kp2 ON kp2.userId = um.user_id AND kp2.phototype_id = 852 "
                + "WHERE um.user_id=?";

        try {
            JSONObject jsonObject = jdbcTemplate.queryForObject(sql, new Object[]{userId}, new RowMapper<JSONObject>() {
                @Override
                public JSONObject mapRow(ResultSet rs, int rowNum) throws SQLException {
                    JSONObject json = new JSONObject();
                    json.put("name", rs.getString("first_name"));
                    json.put("mobile", rs.getString("mobile"));
                    json.put("accountNum", rs.getString("account_num"));
                    json.put("ifsc", rs.getString("ifsc_code"));
                    
                    // Populate other fields similarly...
                    // Example:
                    if (rs.getString("account_num") != null) {
                        json.put("accountNumR", rs.getString("acRemarks"));
                    } else {
                        json.put("accountNumR", "");
                    }
                    
                    // ... continue populating fields
                    
                    return json;
                }
            });
            return jsonObject;
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        }
    }
